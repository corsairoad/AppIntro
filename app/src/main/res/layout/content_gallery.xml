<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bea.fadly.com.bantenelectionapp.GalleryActivity"
    tools:showIn="@layout/activity_gallery">

    <TextView
        android:id="@+id/text_select_image"
        android:layout_width="match_parent"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"
        android:gravity="center_vertical"
        android:background="@color/base_bg_color"
        android:layout_height="wrap_content"
        android:text="@string/select_image"
        android:paddingBottom="@dimen/text_size_content_news"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/text_select_image"
        android:id="@+id/recycler_view_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</RelativeLayout>
