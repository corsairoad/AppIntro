<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bea.fadly.com.bantenelectionapp.fragments.PilkadaFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_tahapan_pilkada"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_marginRight="6dp"
                android:focusable="true"
                android:orientation="vertical">

                <View android:id="@+id/view_tahapan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_tahapan_pilkada"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:src="@drawable/ic_date_range_black_48dp"/>

                    <TextView
                        android:id="@+id/text_tahapan_pilkada"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="@string/tahapan_pilkada"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_partisipasi_pilkada"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:focusable="true">

                <View android:id="@+id/view_partisipasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_partisipasi_pilkada"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:src="@drawable/ic_timeline_black_48dp"/>

                    <TextView
                        android:id="@+id/text_partisipasi_pilkada"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="@string/partisipasi_pilkada"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
